<!DOCTYPE html>
<html lang="en">
    <head>
        <title>AFRMS</title>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
        <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://maxcdn.bootstrapcdn.com/bootstrap/4.5.0/js/bootstrap.min.js"></script>
        <%- include('../../Partials/head'); %>
    </head>
    <body class="container">


        <header>
        <%- include('../../Partials/OCheader'); %>
        </header>


        <main>
            <div class = "row">
                <div class = "col-sm-8">
                    <div class="jumbotron">
                    <form action="/createMission" method="POST">          
                        <h1>Create New Mission</h1>
                        <p>Team Name: <input type="text" name="teamname"></p>
                        <p>Status: <input type="text" name="status"></p>                                      
                        <h3>Event IDs: </h3>
                        <ul id="eventIDs">
                         </ul>
                        
           
                        <p><button type="submit" name="submitEvent">Submit Event</button></p>
                    </form>
                    </div>
                </div>
            <div class="col-sm-4">
                <div class="well">
                     <h1>Events</h1>
                    <ul>
                        <% events.forEach(function(event) { %>
                        <p><strong>Severity: <%= event.severity %></strong></p>
                        <li> Event ID: <%=event._id %></li>
                        <li>
                            Event Location: <%= event.location %>, Description <%= event.description %>, PIN: <%= event.PIN %>, Time: <%= event.timestamp %>
                        </li>
                           <p><button type="submit" name="addEvent" onclick="addEventToMission(event._id)">Add Event</button></p>
                           
                    <% }); %>
                    </ul>
            </div>
    
            </div>
        </main>
        <footer>
        <%- include('../../Partials/footer'); %>
        </footer> 

            <script>
                function addEventToMission(eventID) {
                    var li = document.createElement("LI");
                    
                    li.innerHTML = eventID;
                    document.getElementById("eventIDs").appendChild(li);
            }
          </script>

    </body>
</html>
